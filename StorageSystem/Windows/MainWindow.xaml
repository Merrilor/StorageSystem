<Window x:Class="StorageSystem.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorageSystem"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Icon="/Image/iconMain.png"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Style="{DynamicResource CustomWindowStyle}"
        Title="Storage System" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Width="100" Height="30" Content="Change Theme" Click="Button_Click" />


        <Expander>
            <Expander.Header>
                <TextBlock Text="Products" />
            </Expander.Header>

            <StackPanel>

                <Button Content="1"/>
                <Button  Content="2"  />
                <Button Content="3"  />


            </StackPanel>
                

        </Expander>



    </Grid>
</Window>
